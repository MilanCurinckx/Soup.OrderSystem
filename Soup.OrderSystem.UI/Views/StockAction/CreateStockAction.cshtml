@using Soup.OrderSystem.Objects
@model Soup.OrderSystem.UI.Models.OrderProductModel
<div class="form-group">
    <h1> Add or remove from stock for @Model.ProductName</h1>
    <form method="Post" asp-controller="StockAction" asp-action="CreateStockAction">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input hidden asp-for="@Model.ProductID"/>
        <div class="form-group">
            <select asp-for="StockAction" asp-items="Html.GetEnumSelectList<StockActionEnum>()"></select>
        </div>
        <div class="form-group">
            <label asp-for="ProductAmount" class="control-label mt-4">Amount:</label>
            <input type="number" min="0" class="form-control" asp-for="ProductAmount" />
            <span asp-validation-for="ProductAmount" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-4">Ok</button>
    </form>
</div>
