@{
    ViewData["Title"] = "Create";
}
@model Soup.OrderSystem.UI.Models.CustomerModel
<form method="Post" asp-controller="Customer" asp-action="CreateCustomer">
    <div class="form-group">
        <h1>Add Customer</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="@Model.CustomerID" value="dummyId" />
        <div class="form-group">
            <label asp-for="FirstName" class="control-label mt-4">First name:</label>
            <input type="text" class="form-control" asp-for="FirstName" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="control-label mt-4">Last name:</label>
            <input type="text" class="form-control" asp-for="LastName" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label mt-4">Email:</label>
            <input type="email" class="form-control" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StreetHouse" class="control-label mt-4">Street and house nr.:</label>
            <input type="text" class="form-control" asp-for="StreetHouse" />
            <span asp-validation-for="StreetHouse" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PostalCodeId" class="control-label mt-4">Postalcode:</label>
            <input type="text" class="form-control" asp-for="PostalCodeId" />
            <span asp-validation-for="PostalCodeId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="BusNumber" class="control-label mt-4">Busnumber:</label>
            <input type="number" class="form-control" asp-for="BusNumber" />
            <span asp-validation-for="BusNumber" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-4">Ok</button>
    </div>
</form>

