@model CustomerModel
@{
    ViewData["Title"] = "Update";
}
<h1>Update Customer details</h1>
<hr />
<div class="row">
    <form asp-action="UpdateCustomer" asp-controller="Customer" method="post">
        <div class="form-group">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
            <input hidden name="CustomerId" type="text" asp-for="CustomerID" />
            <input hidden type="number" name="AddressId" asp-for="AddressId"  />
            <input hidden type="text" name="PostalCodeId" asp-for="PostalCodeId" />
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label mt-4">First name:</label>
                <input name="FirstName" type="text" class="form-control" asp-for="FirstName" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label mt-4">Last name:</label>
                <input type="text" class="form-control" asp-for="LastName" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label mt-4">Email:</label>
                <input type="text" class="form-control" asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StreetHouse" class="control-label mt-4">Street and house nr.:</label>
                <input type="text" class="form-control" asp-for="StreetHouse" />
                <span asp-validation-for="StreetHouse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BusNumber" class="control-label mt-4">Busnumber:</label>
                <input type="text" class="form-control" asp-for="BusNumber" />
                <span asp-validation-for="BusNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Save" class="btn btn-primary mt-4">Ok</button>
            </div>
            <div class="form-group">
                <a class="link-secondary mt-4" asp-action="GetCustomers">Go Back</a>
            </div>
        </div>
    </form>
</div>