@model Soup.OrderSystem.Logic.DTO.UserDTO
@{
    ViewData["Title"] = "Update";
}
<h1>Update User</h1>
<hr />
<div class="row">
    <form asp-action="Update" method="post">
        <div class="form-group">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.UserId"/>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            @*//TODO: implement login so user can only update pw is they are logged in*@
            <div class="form-group">
                <label asp-for="PassWordHash" class="control-label"></label>
                <input asp-for="PassWordHash" class="form-control" />
                <span asp-validation-for="PassWordHash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Save" class="btn btn-primary mt-4">Ok</button>
            </div>
            <div>
                <a class="link-secondary mt-4" asp-action="GetUsers">Go Back</a>
            </div>
        </div>
    </form>
</div>

