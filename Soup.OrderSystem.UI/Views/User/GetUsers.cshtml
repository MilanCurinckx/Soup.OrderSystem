@using Soup.Ordersystem.Objects.User
@model List<UserDetails>
@{
    ViewData["Title"] = "View";
}

<p>These are all the users registered</p>
<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th name="edit"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (UserDetails item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td> <button asp-action="Update" asp-route-id="@item.UserId">Update information</button></td>
            </tr>
        }
    </tbody>
</table>

